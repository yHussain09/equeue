<changeSet id="004" author="yasir">
    <createTable tableName="event_services">
        <column name="organizer_id" type="BIGINT"/>
        <column name="id" type="BIGSERIAL">
            <constraints primaryKey="true"/>
        </column>
        <column name="event_id" type="BIGINT"/>
        <column name="service_id" type="BIGINT"/>
        <column name="price_override" type="DECIMAL(10,2)"/>
        <column name="duration_override_minutes" type="INT"/>
        <column name="is_active" type="BOOLEAN" defaultValueBoolean="true"/>
        <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        <column name="created_by" type="VARCHAR(100)"/>
        <column name="updated_at" type="TIMESTAMP"/>
        <column name="updated_by" type="VARCHAR(100)"/>
        <column name="version" type="BIGINT"/>
    </createTable>
    <addForeignKeyConstraint baseTableName="event_services"
                             baseColumnNames="event_id"
                             referencedTableName="events"
                             referencedColumnNames="id"/>
    <addForeignKeyConstraint baseTableName="event_services"
                             baseColumnNames="service_id"
                             referencedTableName="services"
                             referencedColumnNames="id"/>
    <addUniqueConstraint tableName="event_services"
                         columnNames="event_id, service_id"/>
</changeSet>
