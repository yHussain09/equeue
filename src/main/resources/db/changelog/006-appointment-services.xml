<changeSet id="006" author="yasir">
    <createTable tableName="appointment_services">
        <column name="organizer_id" type="BIGINT"/>
        <column name="id" type="BIGSERIAL">
            <constraints primaryKey="true"/>
        </column>
        <column name="appointment_id" type="BIGINT"/>
        <column name="service_id" type="BIGINT"/>
        <column name="service_name_snapshot" type="VARCHAR(150)"/>
        <column name="service_price_snapshot" type="DECIMAL(10,2)"/>
        <column name="service_duration_snapshot_minutes" type="INT"/>
        <column name="quantity" type="INT" defaultValueNumeric="1"/>
        <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        <column name="created_by" type="VARCHAR(100)"/>
        <column name="updated_at" type="TIMESTAMP"/>
        <column name="updated_by" type="VARCHAR(100)"/>
        <column name="version" type="BIGINT"/>
    </createTable>
    <addForeignKeyConstraint baseTableName="appointment_services"
                             baseColumnNames="appointment_id"
                             referencedTableName="appointments"
                             referencedColumnNames="id"/>
    <addForeignKeyConstraint baseTableName="appointment_services"
                             baseColumnNames="service_id"
                             referencedTableName="services"
                             referencedColumnNames="id"/>
</changeSet>
